#!/usr/bin/perl

use strict;
use warnings;

use Test::More;
use Test::Fatal;

use Try::Tiny;

use Moose::Meta::Role::Application;

{
    my $exception =  exception {
	Moose::Meta::Role::Application->check_role_exclusions;
    };

    like(
        $exception,
        qr/Abstract method/,
        "cannot call an abstract method");

    isa_ok(
        $exception,
        "Moose::Exception::CannotCallAnAbstractMethod",
        "cannot call an abstract method");
}

